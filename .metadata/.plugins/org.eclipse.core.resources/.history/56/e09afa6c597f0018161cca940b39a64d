<script>
 	var url = "SpringMvc/mvc/login.index"
	function login(){
 		var xmlHttp = null;
 		xmlHttp = new XMLHttpRequest();
 	    xmlHttp.open( "GET", url, false );
 	    xmlHttp.send( null );
 	    return xmlHttp.responseText;
	}
	
</script>
